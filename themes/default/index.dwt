<!DOCTYPE html>
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<title>{$page_title}</title>
		<link href="{$ecs_template_path}/css/style.css" rel="stylesheet" type="text/css" />
		<link href="{$ecs_template_path}/css/icon/iconfont.css" rel="stylesheet" type="text/css" />
	</head>

	<body>
		<div class="boso">
			<!-- #BeginLibraryItem "/library/page_header.lbi" --><!-- #EndLibraryItem -->

			<iframe class="adfram" src="{$ecs_template_path}/css/fram/ad/ad.html"></iframe>
			<div class="base goodslist">

				<!-- {if $new_goods} -->
					<div class="title">{$lang.new_goods}</div>
					<div>
					<!-- {foreach   from=$new_goods item=g name=n} -->
						<!-- {if $smarty.foreach.n.index != 0 and $smarty.foreach.n.index mod 3 eq 0} -->
							</div><div>
						<!-- {/if} -->
						<a href="{$g.url}">
							<div class="block">
								<div class="img">
									<div class="left"></div>
									<div class="mid">
											<img src="{$g.thumb}"/>
									</div>
								</div>

								<div class="name">
									<!-- {if $g.goods_style_name} -->
										{$g.goods_style_name}
									<!-- {else} -->
										{$g.goods_name}
									<!-- {/if} -->
								</div>

								<div class="price">
									<!--{if $g.promote_price neq "" } -->
										{$lang.promote_price}{$g.promote_price}
									<!--{else}-->
										{$lang.shop_price}{$g.shop_price}
									<!--{/if}-->
								</div>

								<div class="price">
									{$lang.donate_price}<font class="market">{$g.market_price}</font><br />
								</div>
							</div>
						</a>
					<!-- {/foreach} -->
					</div>
				<!-- {/if} -->

				<!-- {if $hot_goods} -->
					<div class="title">{$lang.hot_goods}</div>
					<div>
					<!-- {foreach   from=$hot_goods item=g name=n} -->
						<!-- {if $smarty.foreach.n.index != 0 and $smarty.foreach.n.index mod 3 eq 0} -->
							</div><div>
						<!-- {/if} -->
						<a href="{$g.url}">
							<div class="block">
								<div class="img">
									<div class="left"></div>
									<div class="mid">
											<img src="{$g.thumb}"/>
									</div>
								</div>

								<div class="name">
									<!-- {if $g.goods_style_name} -->
										{$g.goods_style_name}
									<!-- {else} -->
										{$g.goods_name}
									<!-- {/if} -->
								</div>

								<div class="price">
									<!--{if $g.promote_price neq "" } -->
										{$lang.promote_price}{$g.promote_price}
									<!--{else}-->
										{$lang.shop_price}{$g.shop_price}
									<!--{/if}-->
								</div>

								<div class="price">
									{$lang.donate_price}<font class="market">{$g.market_price}</font><br />
								</div>
							</div>
						</a>
					<!-- {/foreach} -->
					</div>
				<!-- {/if} -->

				<!-- {if $best_goods} -->
					<div class="title">{$lang.best_goods}</div>
					<div>
					<!-- {foreach   from=$best_goods item=g name=n} -->
						<!-- {if $smarty.foreach.n.index != 0 and $smarty.foreach.n.index mod 3 eq 0} -->
							</div><div>
						<!-- {/if} -->
						<a href="{$g.url}">
							<div class="block">
								<div class="img">
									<div class="left"></div>
									<div class="mid">
											<img src="{$g.thumb}"/>
									</div>
								</div>

								<div class="name">
									<!-- {if $g.goods_style_name} -->
										{$g.goods_style_name}
									<!-- {else} -->
										{$g.goods_name}
									<!-- {/if} -->
								</div>

								<div class="price">
									<!--{if $g.promote_price neq "" } -->
										{$lang.promote_price}{$g.promote_price}
									<!--{else}-->
										{$lang.shop_price}{$g.shop_price}
									<!--{/if}-->
								</div>

								<div class="price">
									{$lang.donate_price}<font class="market">{$g.market_price}</font><br />
								</div>
							</div>
						</a>
					<!-- {/foreach} -->
					</div>
				<!-- {/if} -->
			</div>

			<!-- #BeginLibraryItem "/library/page_footer.lbi" --><!-- #EndLibraryItem -->
		</div>
	</body>
</html>
